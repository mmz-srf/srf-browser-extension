{
  "name": "SRF Tools",
  "description": "Little helper for SRF developers and CMS users",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "32": "/assets/tool_box32.png",
      "48": "/assets/tool_box48.png",
      "64": "/assets/tool_box64.png",
      "128": "/assets/tool_box128.png"
    },
    "default_popup": "srf-tools.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.srf.ch/*"
      ],
      "js" : [
        "scripts/banner.js",
        "scripts/links.js"
      ],
      "css" : ["styles/injected.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.srf.ch/*"
  ],
  "icons": {
    "32": "/assets/tool_box32.png",
    "48": "/assets/tool_box48.png",
    "64": "/assets/tool_box64.png",
    "128": "/assets/tool_box128.png"
  }
}
