{
  "name": "SRF Tools",
  "description": "Little helper for SRF developers and CMS users",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "icon.png",
    "default_popup": "srf-tools.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.srf.ch/*",
        "http://*.srf.ch/*"
      ],
      "js" : ["scripts/banner.js"],
      "css" : ["styles/injected.css"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ]
}
