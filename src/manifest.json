{
  "manifest_version": 3,
  "name": "SRF Browser Extension",
  "description": "Little helper for SRF developers and CMS users",
  "version": "1.9.0",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.srf.ch/*",
        "*://*.rtr.ch/*",
        "*://*.srfdigital.ch/*",
        "*://*.herokuapp.com/*",
        "*://localhost/*"
      ],
      "js" : [
        "banner.js",
        "contentInfoGatherer.js"
      ],
      "css" : ["banner.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://srgssr-ch.atlassian.net/*"
      ],
      "js" : [
        "daily.js"
      ],
      "css" : ["daily.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "32": "srf_toolbox_32.png",
    "48": "srf_toolbox_48.png",
    "64": "srf_toolbox_64.png",
    "128": "srf_toolbox_128.png"
  }
}
